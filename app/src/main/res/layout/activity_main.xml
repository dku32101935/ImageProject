<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="HOME" />

    <Button
        android:id="@+id/button_date"
        android:text="DATE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/button_home"/>

    <Button
        android:id="@+id/button_face_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/button_date"
        android:text="FACE CHECK" />

    <LinearLayout
        android:id="@+id/used_line1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/button_home"
        android:layout_marginTop="5dp"
        android:background="#00FF00"
        android:orientation="horizontal" />

    <ImageView
        android:id="@+id/imageview_in_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/used_line1"
        android:layout_above="@+id/button_upload"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/button_take_image"
        android:text="TAKE IMAGE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"/>

    <Button
        android:id="@+id/button_upload"
        android:text="UPLOAD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button_take_image"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"/>



</RelativeLayout>